<%- include('../partials/header') %>
<body>
  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <%- include('../partials/nav') %>
      <!-- Main Content -->
      <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 content">
        <nav class="navbar navbar-expand navbar-light mb-4">
          <div class="container-fluid">
            <a class="navbar-brand" href="#">Query Console</a>
          </div>
        </nav>

        <section id="manualScriptSection">
          <form id="queryForm" method="POST">
            <label for="queryBox" class="form-label fw-bold">Query</label>
            <textarea id="queryBox" name="query"
                      class="form-control border border-primary p-3"
                      rows="4"
                      placeholder="SELECT * FROM users;">
            </textarea>
            <button type="submit" class="btn btn-primary mt-3">Run Query</button>
          </form>
        </section>

        <!-- Result Table -->
        <div id="resultTable" class="mt-5"></div>

        <!-- Filter Dropdowns -->
        <div id="filterDropdownContainer" class="mt-4" style="display: none;">
          <div class="row">
            <div class="col-md-6">
              <label for="columnFilter" class="form-label fw-bold">Filter by column</label>
              <select id="columnFilter" class="form-select">
                <option value="">-- Select Column --</option>
              </select>
            </div>
            <div class="col-md-6">
              <label for="sortOrder" class="form-label fw-bold">Sort order</label>
              <select id="sortOrder" class="form-select">
                <option value="asc">Ascending</option>
                <option value="desc">Descending</option>
              </select>
            </div>
          </div>
          <button id="applySort" class="btn btn-secondary mt-3">Apply Filter</button>
        </div>
      </main>
    </div>
  </div>
  <script src = "../../public/index.js"></script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
